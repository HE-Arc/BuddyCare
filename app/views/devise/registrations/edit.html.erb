<div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Editer votre profil</div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            
                        
                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                          <% flash.each do |name, msg| %>
                              <% if msg.is_a?(String) %>
                              <% if name != "danger" %>
                                <div class="alert alert-danger">
                              <% else  %>
                                <div class="alert alert-success">
                              <% end %>
                                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                  <%= content_tag :div, msg, :id => "flash_#{name}" %>
                                </div>
                              <% end %>
                            <% end %>
                                        
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <%= f.text_field :pseudo, autofocus: true, :class => "form-control", :placeholder => "Votre pseudo" %>
                                  
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Votre e-mail" %>
                                    </div>

                      <% if @validatable %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %>
                                   <i>(Laisser vide si vous ne voulez pas changer votre mot de passe)</i>
                      <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.password_field :password, autofocus: "off", :class => "form-control", :placeholder => "Votre nouveau mot de passe" %>
                                    </div>
                      
                      <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.password_field :password_confirmation, autofocus: "off", :class => "form-control", :placeholder => "Confirmer votre nouveau mot de passe" %>
                                    </div>
                                  <i>(Votre mot de passe actuel permet de valider vos changements)</i><br />
                                  <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.password_field :current_password, autofocus: "off", :class => "form-control", :placeholder => "Votre mot de passe actuel" %>
                                    </div>

  


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                      <%= f.submit "Mettre à jour", :class => "btn btn-success" %>
                                    </div>
                                </div>
                                  
                                  

<% end %>  
                                  <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                          <%= button_to "Supprimer votre compte", user_registration_path, :class => "btn btn-danger", data: { confirm: "Etês-vous sûr ?" }, method: :delete %>
                                        </div>
                                    </div>
                                </div> 
                                
                          
                        </div>                     
                    </div>  
        </div>
 

