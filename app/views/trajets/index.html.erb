
<h1>Listing trajets</h1>

<table class="col-xs-12 col-sm-12 col-md-12">
  
    <tr>
      <th>Ville de départ</th>
      <th>Ville d'arrivée</th>
      <th>Distance [km]</th>
      <th>Prix [francs]</th>
      <th>Nombre de place disponible</th>
      <th>Date de départ</th>
      <th>Utilisateur</th>
    </tr>


  <tbody>
    <% @trajets.each do |trajet| %>
    
    <tr onclick="document.location='trajets/<%=trajet.id%>'" style="cursor:pointer" onmouseover="this.style.backgroundColor='#006db9'" onmouseout="this.style.backgroundColor=''">
        
        <td><%= trajet.departVille %></td>
        <td><%= trajet.arriveeVille %></td>
        <td><%= trajet.distance %></td>
        <td><%= trajet.prix %></td>
        <td><%= trajet.nbPlacesDisponible %></td>
        <td><%= trajet.date %></td>  
        <td><%= trajet.user.pseudo %></td>  
    </tr>
    <% end %>
  </tbody>
</table>