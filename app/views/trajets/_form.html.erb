<div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Ajouter un trajet</div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            
                        
                          <%= form_for(@trajet) do |f| %>
                          <% flash.each do |name, msg| %>
                              <% if msg.is_a?(String) %>
                              <% if name != "danger" %>
                                <div class="alert alert-danger">
                              <% else  %>
                                <div class="alert alert-success">
                              <% end %>
                                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                  <%= content_tag :div, msg, :id => "flash_#{name}" %>
                                </div>
                              <% end %>
                            <% end %>
                                  
                                        
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <%= f.text_field :departVille, autofocus: true, :class => "form-control", :placeholder => "Ville de départ" %>
                                  
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.text_field :arriveeVille, autofocus: true, :class => "form-control", :placeholder => "Ville d'arrivée" %>
                                    </div>
                      
                      <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.text_field :prix, autofocus: "off", :class => "form-control", :placeholder => "Prix du voyage" %>
                                    </div>
                                  
                                  <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.number_field :nbPlacesDisponible, autofocus: "off", :class => "form-control", :placeholder => "Nombre de places disponible" %>
                                    </div>
                                  
                                  <div style="margin-bottom: 25px" class="input-group">
                                        <label for="date">Sélectionner une date </label>
                                        <%= f.datetime_select :date, autofocus: "off", :class => "form-control", :placeholder => "Sélectionner une date" %>
                                    </div>

  


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                      <%= f.submit "Ajouter", :class => "btn btn-success" %>
                                    </div>
                                </div>
                                  
                                  

<% end %>  
                                
                          
                        </div>                     
                    </div>  
        </div>
