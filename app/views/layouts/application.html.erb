<!DOCTYPE html>
<html>
<head>
  <title>DevWebRails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <!--<img src="/assets/images/audio.png" alt="" />-->
                </a>
            </div>
            <div class="navbar-right">
                <ul class="nav navbar-nav ">
                  <li><%= link_to "Home", root_path %></li>
                  <%= render 'devise/menus/registration_items' %>
                  

                  <% if user_signed_in? %>

                  <!--<li><%= link_to('Ajouter Trajet', new_trajet_path) %></li>-->
                  <li><a href="#newTrajet" data-rel="popup3" class="poplight">Ajouter Trajet</a></li>
                  <li><%= link_to('Trajets', trajets_path) %></li>

                  <%end%>
                  <%= render 'devise/menus/login_items' %>
                  <li><%= link_to "Contact", contact_path %></li>
                </ul>
            </div>
        </div>
    </div>
  
<%= yield %>

</body>
</html>
