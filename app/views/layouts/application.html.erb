<!DOCTYPE html>
<html>
<head>
  <title>Buddycar</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="alert"><%= alert %></p>
  
<div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
          
          
            <div class="navbar-collapse collapse navbar-right scroll-me">
                <ul class="nav navbar-nav ">
                  <li><%= link_to "Accueil", root_path %></li>
                  <li><%= render 'devise/menus/registration_items' %></li>
                  <% if user_signed_in? %>
                    <li><a href="#newTrajet" data-rel="popup3" class="poplight">Ajouter Trajet</a></li>
                  <!--<li><%= link_to('Ajouter Trajet', new_trajet_path) %></li>-->
                    <li><%= link_to 'Trajets', trajets_path %></li>
                    <li><%= link_to 'Messages', conversations_path %></li>
                  <%end%>
                  <li><%= render 'devise/menus/login_items' %></li>
                </ul>
            </div>
        </div>
    </div>
<%= yield %>
</body>
</html>
