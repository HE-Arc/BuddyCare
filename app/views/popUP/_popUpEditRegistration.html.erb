<% if user_signed_in? %>
<div id="editRegistration" class="modalDialog">
	<div>
		<div class="panel-heading">
                        <h3 class="panel-title">Editer profil</h3>
                    </div>
                    <div class="panel-body">
                      <div>
                          <span class="close"><a href="#">X</a></span>
                      </div>
                        <form accept-charset="UTF-8" action="buddycar/users" class="edit_user" id="edit_user" method="post">
                          <div style="display:none">
                          <input name="utf8" type="hidden" value="&#x2713;" /><input name="_method" type="hidden" value="put" />
                                                <input name="authenticity_token" type="hidden"/></div>

                        <div class="field">
                          <label for="user_pseudo">Pseudo</label><br />
                          <input autofocus="autofocus" id="user_pseudo" name="user[pseudo]" type="text" value=<%= current_user.pseudo %> />
                        </div>

                        <div class="field">
                          <label for="user_email">E-mail</label><br />
                          <input autofocus="autofocus" id="user_email" name="user[email]" type="email" value=<%= current_user.email %> />
                        </div>


                        <div class="field">
                          <label for="user_password">Mot de passe</label> <i>(Laisser vide pour pas le changer)</i><br />
                          <input autocomplete="off" id="user_password" name="user[password]" type="password" />
                        </div>

                        <div class="field">
                          <label for="user_password_confirmation">Confirmer mot de passe</label><br />
                          <input autocomplete="off" id="user_password_confirmation" name="user[password_confirmation]" type="password" />
                        </div>

                        <div class="field">
                          <label for="user_current_password">Mot de passe actuel</label><br> <i>(Nous avons besoin de votre mot de passe actuel pour confirmer les changements)</i><br />
                          <input autocomplete="off" id="user_current_password" name="user[current_password]" type="password" />
                        </div>

                        <div class="actions">
                          <input name="commit" type="submit" value="Update" />
                        </div>
                      </form>               
                    </div>
                </div>
</div>
 <%end%>