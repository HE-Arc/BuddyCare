<div id="login" class="modalDialog">
	<div>
		<div class="panel-heading">
                        <h3 class="panel-title">Se connecter</h3>
                    </div>
                    <div class="panel-body">
                      <div>
                          <span class="close"><a href="#">X</a></span>
                      </div>
                      <%=request.env['PATH_INFO']%>
                      <% if request.env['PATH_INFO'] == "/"%>
                        <form accept-charset="UTF-8" action="buddycar/users/sign_in" class="new_user" id="new_user" method="post">
                      <% else %>
                        <form accept-charset="UTF-8" action="/users/sign_in" class="new_user" id="new_user" method="post">
                       <% end %>
                          <div style="display:none"><input name="utf8" type="hidden" value="&#x2713;" />
                              <input name="authenticity_token" type="hidden" />
                          </div>
                          <div class="field">
                            <label for="user_email">E-mail</label><br />
                            <input autofocus="autofocus" id="user_email" name="user[email]" type="email" />
                          </div>

                          <div class="field">
                            <label for="user_password">Mot de passe</label><br />
                            <input autocomplete="off" id="user_password" name="user[password]" type="password" />
                          </div>

                            <div class="field">
                              <input name="user[remember_me]" type="hidden" value="0" /><input id="user_remember_me" name="user[remember_me]" type="checkbox" value="1" />
                              <label for="user_remember_me">Se souvenir</label>
                            </div>

                          <div class="actions">
                            <input name="commit" type="submit" value="Log in" />
                          </div>
                      </form>               
                    </div>
                </div>
</div>